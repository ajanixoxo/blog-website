<%- include("partials/header") -%>
<h1>Home</h1>

<p><%= homeContent %></p>
<% posts.forEach(function(post) { %>  
  <h1><%= post.title %></h1>
   <% if (Array.isArray(post.content)) { %>
    <p><%= post.content[0].substring(0, 100) + " ... " %><a href="/posts/<%= post.title %>">Read More</a></p>
  <% }else { %>
   <p><%= post.content %></p>
 <% } %>
<% }) %>

<%- include("partials/footer") -%>


